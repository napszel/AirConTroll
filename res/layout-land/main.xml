<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/muteButton" android:layout_weight="0.16"
            android:src="@drawable/button_sound_off_mouse_on"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playField"
            android:src="@drawable/gamefield_level2"/>
    <ImageView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:id="@+id/Troll" android:layout_gravity="right"
            android:src="@drawable/trolltiny"/>
</LinearLayout>

